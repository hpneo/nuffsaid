!!!
%html
  %head
    %title nuff said
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900,400italic"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      %h1
        %a{:href => '/'}
          nuff said
      %nav.right
        - if user_signed_in?
          %a.green.button{:href => '#'}
            add storage account
          %a.red.button{:href => '#'}
            sign out
        - else
          %a.blue.button{:href => '#'}
            sign in with...
          %ul.menu
            %li
              %a{:href => '#'}
                Twitter
            %li
              %a{:href => '#'}
                Facebook
            %li
              %a{:href => '#'}
                Dropbox
    = yield
